{% extends 'ComptesCoreBundle::layout.html.twig' %}

{% block title %} - Dashboard{% endblock %}

{% block content %}
    <h1>Dashboard</h1>
    <div class="row">
        <h2 class="sr-only">Indicateurs</h2>
        <div class="widget col-md-4">
            <div class="widget-content">
                <div class="widget-icon pull-left">
                    <span class="glyphicon glyphicon-euro"></span>
                </div>
                <h3>
                    + <strong>250€</strong>
                    <small>budget restant pour le mois</small>
                </h3>
            </div>
        </div>
        <div class="widget col-md-4">
            <div class="widget-content">
                <div class="widget-icon pull-left">
                    <span class="glyphicon glyphicon-thumbs-up"></span>
                </div>
                <h3>
                    {{ monthly_balance >= 0 ? "+" : "-" }} <strong>{{ monthly_balance|abs|number_format(2, ".", "") ~ "€" }}</strong>
                    <small>balance mensuelle sur 1 an</small>
                </h3>
            </div>
        </div>
        <div class="widget col-md-4">
            <div class="widget-content">
                <div class="widget-icon pull-left">
                    <span class="glyphicon glyphicon-road"></span>
                </div>
                <h3>
                    478 <strong>kilomètres</strong>
                    <small>parcourus</small>
                </h3>
            </div>
        </div>
    </div>
{% endblock %}